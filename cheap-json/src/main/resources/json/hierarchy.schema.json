{
  "$id": "https://netbeing.net/cheap/hierarchy.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hierarchy",
  "description": "Base hierarchy containing organized entities",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["AM", "EL", "ES", "ED", "ET"],
      "description": "The type of hierarchy: AM=AspectMap, EL=EntityList, ES=EntitySet, ED=EntityDirectory, ET=EntityTree"
    },
    "name": {
      "type": "string",
      "description": "The name of this hierarchy within its catalog"
    },
    "contents": {
      "description": "The contents of the hierarchy, structure varies by type"
    }
  },
  "required": ["type", "name", "contents"],
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "AM"
          }
        }
      },
      "then": {
        "properties": {
          "contents": {
            "type": "object",
            "additionalProperties": {
              "$ref": "./aspect.schema.json"
            },
            "description": "Map of entity UUID to aspect instance for AspectMap hierarchy"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "EL"
          }
        }
      },
      "then": {
        "properties": {
          "contents": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Ordered list of entity UUIDs for EntityList hierarchy (duplicates allowed)"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "ES"
          }
        }
      },
      "then": {
        "properties": {
          "contents": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Array of unique entity UUIDs for EntitySet hierarchy"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "ED"
          }
        }
      },
      "then": {
        "properties": {
          "contents": {
            "type": "object",
            "additionalProperties": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Map of string keys to entity UUIDs for EntityDirectory hierarchy"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "ET"
          }
        }
      },
      "then": {
        "properties": {
          "contents": {
            "$ref": "#/$defs/treeNode",
            "description": "Root node of the EntityTree hierarchy"
          }
        }
      }
    }
  ],
  "$defs": {
    "treeNode": {
      "type": "object",
      "properties": {
        "entityId": {
          "type": "string",
          "format": "uuid",
          "description": "The entity UUID associated with this tree node"
        },
        "children": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/treeNode"
          },
          "description": "Child nodes keyed by name"
        }
      },
      "minProperties": 1
    }
  }
}
