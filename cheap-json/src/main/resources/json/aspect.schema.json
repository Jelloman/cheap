{
  "$id": "https://netbeing.net/cheap/aspect.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Aspect",
  "description": "An aspect instance with arbitrary properties but no sub-objects. Properties can be simple values or arrays of simple values.",
  "type": "object",
  "additionalProperties": {
    "oneOf": [
      {
        "type": "null"
      },
      {
        "type": "boolean"
      },
      {
        "type": "number"
      },
      {
        "type": "integer"
      },
      {
        "type": "string"
      },
      {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "boolean"
            },
            {
              "type": "number"
            },
            {
              "type": "integer"
            },
            {
              "type": "string"
            }
          ]
        }
      }
    ]
  }
}
